.finances-section
  background-image: url('../images/finances-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #fff

  &__container
    position relative
    color: #000
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 30px 0 30px 0
    +above($breakpoints.md)
      padding 50px 0 50px 0
    +above($breakpoints.xxl)
      padding 68px 0 68px 0

  &__img
    width 100%
    height: auto
    border-radius: 15px
    +above($breakpoints.xxl)
      border-radius: 25px

  &__title
    padding 20px 0 0 0
    +above($breakpoints.sm)
      padding 40px 0 0 0
    +above($breakpoints.md)
      padding 60px 0 0 0
    +above($breakpoints.xxl)
      padding 84px 0 0 0

  &__sub-title
    padding 10px 0 20px 0
    +above($breakpoints.sm)
      padding 15px 0 33px 0
    +above($breakpoints.md)
      padding 15px 0 50px 0
    +above($breakpoints.xxl)
      padding 10px 0 84px 0

  &__cards-wrapper
    padding 20px 20px 1px 20px
    background-color #F8F8F8
    border-radius: 15px
    overflow hidden
    +above($breakpoints.sm)
      padding 0
      background-color transparent
      border-radius: 0

  &__cards-wrapper-bg-1
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      border-radius: 20px
      background-color #F8F8F8
      width 100%
      height: 90px
      bottom: 397px;
    +above($breakpoints.md)
      border-radius: 25px
      height: 130px;
      bottom: 523px;
    +above($breakpoints.xxl)
      height: 189px
      bottom: 685px;

  &__cards-wrapper-bg-2
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      border-radius: 20px
      background-color #F8F8F8
      width 100%
      height: 90px
      bottom: 290px;
    +above($breakpoints.md)
      border-radius: 25px
      height: 130px;
      bottom: 370px;
    +above($breakpoints.xxl)
      height: 189px
      bottom: 476px;

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      flex-wrap: wrap
      justify-content center
      gap: 40px 20px
    +above($breakpoints.md)
      gap: 60px 50px
    +above($breakpoints.xxl)
      gap: 100px 120px

  &__card
    width 260px !important
    display: flex
    flex-direction: row
    gap: 10px
    +above($breakpoints.sm)
      width 190px !important
    +above($breakpoints.md)
      width 245px !important
      gap: 20px
    +above($breakpoints.xxl)
      padding 2px 0
      width 292px !important
      gap: 27px

  &__card-text
    color: #141414
    display: flex
    flex-direction: column
    gap: 10px
    +above($breakpoints.md)
      gap: 18px

  &__bottom
    text-align: center
    position relative
    overflow hidden
    padding 20px 15px 20px 15px
    color: #fff
    background-color #000
    border-radius: 20px
    margin-top 20px
    +above($breakpoints.sm)
      text-align: start
      margin-top 50px
      padding 30px 10px 30px 20px
    +above($breakpoints.md)
      border-radius: 25px
      padding 40px 10px 40px 40px
      margin-top 80px
    +above($breakpoints.xxl)
      margin-top 116px
      padding 55px 10px 60px 70px

  &__bottom-img
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      width 264px
      height: auto
      bottom: 0
      right: 0
    +above($breakpoints.md)
      width 308px
      bottom: 0
      right: 0
    +above($breakpoints.xxl)
      width 400px
      bottom: 0
      right: 0

  &__bottom-img-2
    position: absolute
    width: 80px;
    height: auto;
    bottom: 191px;
    left: -51px;
    +above($breakpoints.sm)
      bottom: 181px;
      left: -81px;
      width: 120px;
    +above($breakpoints.md)
      bottom: 205px;
      left: -127px;
      width: 180px;
    +above($breakpoints.xxl)
      bottom: 277px;
      left: -153px;
      width: 217px;

  &__bottom-title
    padding-bottom 20px
    position relative
    z-index 1
    &:after
      position: absolute
      z-index -1
      content: ""
      width: 56%;
      height: 24%;
      top: 0;
      left: 2px;
      background-color #323031
      border-radius: 30px
      +above($breakpoints.sm)
        width: 29%;
        height: 24%;
        top: 0;
        left: -5px;
      +above($breakpoints.md)
        width: 24%;
        height: 26%;
        top: -1px;
        left: -6px;
      +above($breakpoints.xxl)
        width: 25%;
        height: 25%;
        top: -2px;
        left: -9px;
    +above($breakpoints.sm)
      padding-bottom 25px
    +above($breakpoints.md)
      padding-bottom 30px
    +above($breakpoints.xxl)
      padding-bottom 46px

  &__bottom-block
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 20px
    +above($breakpoints.md)
      gap: 25px
    +above($breakpoints.xxl)
      gap: 35px
.finances-item
  width 230px !important
  +above($breakpoints.sm)
    width 190px !important
  +above($breakpoints.md)
    width 220px !important
  +above($breakpoints.xxl)
    width 257px !important
