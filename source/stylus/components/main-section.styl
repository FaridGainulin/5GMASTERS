.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #121212

  &__container
    position relative
    padding 20px 0 0 0
    +above($breakpoints.sm)
      padding 30px 0 60px 0
    +above($breakpoints.md)
      padding 40px 0 80px 0
    +above($breakpoints.xxl)
      padding 45px 0 116px 0

  &__logo-icon
    width 150px
    height: auto
    margin 20px auto 0
    +above($breakpoints.sm)
      margin 0
      margin-top 30px
      width 200px
    +above($breakpoints.md)
      margin-top 50px
      width 300px
    +above($breakpoints.xxl)
      margin-top 92px
      width 341px

  &__title,
  &__sub-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    padding 15px 0 15px 0
    +above($breakpoints.sm)
      padding 15px 0 20px 0
    +above($breakpoints.md)
      padding 15px 0 20px 0
    +above($breakpoints.xxl)
      padding 15px 0 20px 0

  &__sub-title
    margin-bottom 15px
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      align-items: center
      gap: 10px
      margin-bottom 25px
    +above($breakpoints.md)
      gap: 15px
      margin-bottom 30px
    +above($breakpoints.xxl)
      gap: 19px
      margin-bottom 45px

  &__sub-title-line
    display: none
    +above($breakpoints.sm)
      display: block
      width 3px
      height: 40px
      border-radius: 5px
      background-color #fff
    +above($breakpoints.md)
      width 4px
      height: 47px
    +above($breakpoints.xxl)
      height: 56px
      width 5px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 9px
    +above($breakpoints.sm)
      flex-direction: row

  &__bottom-left
    width 300px
    backdrop-filter: blur(10px);
    background: #323031;
    border-radius: 13px
    padding 18px 15px 18px 15px
    +above($breakpoints.sm)
      width 220px
      padding 18px 20px 20px 20px
    +above($breakpoints.md)
      width 300px
    +above($breakpoints.xxl)
      height: 301px
      padding 18px 21px 24px 22px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    padding-top 10px

  &__bottom-right
    width 300px
    overflow hidden
    backdrop-filter: blur(10px);
    background: #323031;
    border-radius: 13px
    padding 20px 20px 0 20px
    +above($breakpoints.sm)
      width 210px
      padding: 35px 20px 45px 20px;
    +above($breakpoints.md)
      width 263px
      padding: 35px 20px 46px 20px;
    +above($breakpoints.xxl)
      width 263px
      height: 301px
      padding 38px 41px 41px 30px

  &__bottom-right-cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 35px
    +above($breakpoints.md)
      gap: 35px
    +above($breakpoints.xxl)
      gap: 44px

  &__bottom-right-card
    width 192px !important
    display: flex
    flex-direction: row
    gap: 15px
    +above($breakpoints.sm)
      width 142px !important
    +above($breakpoints.md)
      width 192px !important
      gap: 28px

  &__bottom-icon
    width 30px
    height: auto
    +above($breakpoints.md)
      width 42px

  &__img
    width 300px
    height: auto
    margin 15px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 395px;
      bottom: 0;
      right: -148px;
    +above($breakpoints.md)
      width: 570px;
      bottom: 0;
      right: -218px;
    +above($breakpoints.xxl)
      width 886px
      bottom: 0
      right: -370px
