.start-section
  // background-image: url('../images/start-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    z-index 1
    color: #000
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 30px 0 50px 0
    +above($breakpoints.md)
      padding 40px 0 80px 0
    +above($breakpoints.xxl)
      padding 45px 0 96px 0

  &__img
    position: absolute
    width: 90px;
    height: auto;
    top: 70px;
    right: -31px;
    +above($breakpoints.sm)
      width: 200px;
      top: 76px;
      right: -104px;
    +above($breakpoints.md)
      width: 280px;
      top: 111px;
      right: -149px;
    +above($breakpoints.xxl)
      width: 341px;
      top: 122px;
      right: -175px;

  &__icon
    position: absolute
    width: 100px;
    height: auto;
    bottom: 281px;
    left: -28px;
    +above($breakpoints.sm)
      width: 160px;
      bottom: 256px;
      left: -64px;
    +above($breakpoints.md)
      width: 200px;
      bottom: 312px;
      left: -84px;
    +above($breakpoints.xxl)
      width: 256px;
      bottom: 364px;
      left: -104px;

  &__bottom-img
    position: absolute
    z-index -1
    width: 281px;
    height: auto;
    bottom: 20px;
    right: -175px;
    +above($breakpoints.sm)
      width: 300px;
      bottom: 57px;
      right: -26px;
    +above($breakpoints.md)
      width: 350px;
      bottom: 83px;
      right: 33px;
    +above($breakpoints.xxl)
      width: 416px;
      bottom: 96px;
      right: 134px;

  &__title
    line-height 110% !important
    +above($breakpoints.xxl)
      line-height 110% !important

  &__sub-title
    padding 13px 0 20px 0
    position relative
    z-index 1
    &:after
      content: ""
      position: absolute
      z-index -1
      width: 319px;
      height: 42px;
      bottom: 18px;
      left: -6px;
      border-radius: 30px
      background: linear-gradient(40.85deg, rgb(244, 244, 244) 45.75%,rgb(142, 142, 142) 161.162%),rgb(237, 237, 237)
      +above($breakpoints.sm)
        width: 448px;
        height: 23px;
        bottom: 28px;
        left: 138px;
      +above($breakpoints.md)
        width: 567px;
        height: 30px;
        bottom: 38px;
        left: 197px;
      +above($breakpoints.xxl)
        width: 672px;
        height: 50px;
        bottom: 35px;
        left: 255px;
    +above($breakpoints.sm)
      padding 13px 0 30px 0
    +above($breakpoints.md)
      padding 13px 0 40px 0
    +above($breakpoints.xxl)
      padding 13px 0 45px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 19px

  &__card
    width 280px !important
    border-radius: 20px
    padding 20px 10px 20px 20px
    display: flex
    flex-direction: column
    gap: 10px
    +above($breakpoints.sm)
      width 235px !important
      gap: 15px
      padding 20px 10px 20px 20px
    +above($breakpoints.md)
      width 312px !important
      padding 30px 10px 20px 30px
      gap: 20px
    +above($breakpoints.xxl)
      width 377px !important
      height: 458px
      padding 40px 10px 30px 50px
      gap: 30px
      border-radius: 30px

  &__card-item
    display: flex
    flex-direction: row
    gap: 15px
    height: 70px
    +above($breakpoints.sm)
      height: 100px
    +above($breakpoints.md)
      height: 95px
      gap: 26px
    +above($breakpoints.xxl)
      height: 106px

  &__card-icon
    width 20px
    height: 20px
    +above($breakpoints.md)
      width 32px
      height: 32px

  &__card-text
    display: flex
    flex-direction: column
    gap: 10px

  &__bottom
    margin-top 20px
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      flex-direction: row
      gap: 20px
      margin-top 40px
      margin-left 75px
    +above($breakpoints.md)
      gap: 30px
      margin-top 50px
      margin-left 50px
    +above($breakpoints.xxl)
      gap: 45px
      margin-top 63px
      margin-left 77px

  &__bottom-text
    padding 12px 0 0 0
    +above($breakpoints.sm)
      padding 12px 0 20px 0
    +above($breakpoints.md)
      padding 12px 0 30px 0
    +above($breakpoints.xxl)
      padding 12px 0 40px 0

  &__bottom-icon
    display: none
    +above($breakpoints.sm)
      display: block
      width 90px
      height: auto
    +above($breakpoints.md)
      width 120px
    +above($breakpoints.xxl)
      width 169px

  &__form
    width 300px
    border-radius: 20px
    background-color #000
    padding 20px 15px
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 260px
      padding 20px
    +above($breakpoints.md)
      border-radius: 25px
      width 390px
      padding 31px 39px 28px 39px
    +above($breakpoints.xxl)
      padding 41px 49px 38px 49px

.start-card-color-black
  background-color #000
  color: #fff
.start-card-color-grey
  background-color #F5F5F5
  color: #000
